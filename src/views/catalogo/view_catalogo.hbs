<style>
.ejemploblur {
   -webkit-filter: blur(1px);
   -moz-filter: blur(1px);
   -o-filter: blur(1px);
   -ms-filter: blur(1px);
   filter: blur(1px);
}
</style>
<form action="/comprarFotos" method="post">
<div class="container p-2">
  <div class="card bg-dark text-white p-2">
      <div class="form-group">
        <strong><i class="fa-solid fa-money-bill">  BUY A PHOTO OR SEVERAL</i></strong>
      </div>
      <div class="form-group">
        <button type="submit" id="MandarValores" class="btn btn-outline-success"><i class="fas fa-shopping-cart"> MULTIPLE PHOTOS</i></button>
      </div>
      <hr> 
  </div>
</div>
    <div class=" container p-4">
    <div class="row">
        <div class="card-columns">
         
         {{#each imagenesCatalogo}} 
        <div class=" card animate__animated animate__backInDown">
          <div class=" ejemploblur">
            <img src="{{url}}" alt="" class="ejemploblur card-img-top"/>
          </div>
            <div class=" container">
              <div class="card-body ">
                  <form>
                  <input type="text" id="DarFotos" name="FotosSeleccionada" hidden>
                    <input type="checkbox"  class="valorchecks" value={{id_foto}}>
                  </form>
              </div>
              <div class="  form-group">
                <p class="card-text"><i class="fa-regular fa-calendar-days"> Fecha: {{fecha}}</i></p>
                <p class="card-text"><i class="fa-solid fa-camera-retro"> Fotografo : {{nombre}}</i></p>
                <p class="card-text"></p>
                <a href="/pago_photo/{{id_foto}}" class="btn btn-primary btn-block"><i class="fas fa-shopping-cart"> A PHOTO</i></a>
              </div>
            </div>
        </div>
        {{/each}}
        </div>
      </div>
    </div>
</form>
